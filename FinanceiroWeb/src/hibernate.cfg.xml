<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">admin</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/financeiroweb</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.current_session_context_class">thread</property>
  <property name="hibernate.transaction.flush_before_completion">true</property>
  <mapping class="br.com.financeiroweb.pojo.Acesso"/>
  <mapping class="br.com.financeiroweb.pojo.Usuario"/>
  <mapping class="br.com.financeiroweb.pojo.ClienteFornecedor"/>
  <mapping class="br.com.financeiroweb.pojo.CondicaoDePagamento"/>
  <mapping class="br.com.financeiroweb.pojo.ContaBancaria"/>
  <mapping class="br.com.financeiroweb.pojo.ContaContabil"/>
  <mapping class="br.com.financeiroweb.pojo.Contato"/>
  <mapping class="br.com.financeiroweb.pojo.Empresa"/>
  <mapping class="br.com.financeiroweb.pojo.Endereco"/>
  <mapping class="br.com.financeiroweb.pojo.Funcionario"/>
  <mapping class="br.com.financeiroweb.pojo.HistoricoMovimento"/>
  <mapping class="br.com.financeiroweb.pojo.Modulo"/>
  <mapping class="br.com.financeiroweb.pojo.Movimento"/>
  <mapping class="br.com.financeiroweb.pojo.PlanoDeContas"/>
 </session-factory>
</hibernate-configuration>
